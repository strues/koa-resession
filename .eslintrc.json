{
  "extends": "axial",
  "parser": "babel-eslint",
  "env": {
    "node": true,
    "mocha": true,
    "es6": true
  },
  "plugins": ["import"],
  "globals": {
    "__CLIENT__": false,
    "__SERVER__": false,
    "__DEV__": false,
    "__PROD__": false,
    "__DEBUG__": false,
    "expect": true,
    "global": true,
    "window": true,
    "sinon": true,
    "debug": true
  },
  "rules": {
    "no-shadow" : 0,
    "consistent-return": 0,
    "import/no-unresolved": 0,
    "no-param-reassign": 0,
    "generator-star-spacing": 0,
    "arrow-parens": 0
  }
}
